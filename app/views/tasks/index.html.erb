<h2>All tasks</h2>
<table>
    <thead>
        <th>Start Time</th>
        <th>End Time</th>
        <th>Title</th>
        <th>Description</th>
        <th>Screenshot</th>
        <th>Actions</th>
    </thead>

    <tbody>
        <% @tasks.each do |task| %>
            <tr>
                <td><%= task.start_time %></td>
                <td><%= task.end_time %></td>
                <td><%= task.title %></td>
                <td><%= task.description %></td>
                <td><%= image_tag (task.screenshot) if task.screenshot.attached? %></td>
                <td><%= link_to "Show", task %></td>
                <td><%= link_to "Edit", edit_task_path(task) %></td>
                <td><%= link_to "delete", task, data: {turbo_method: :delete , turbo_confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<td><%= link_to "New Task", new_task_path %></td>

