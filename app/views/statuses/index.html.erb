<h1>All Statuses</h1>

<table>
  <thead>
    <tr>
      <% if admin? %>
        <th>Employee Name:</th>
      <% end %>
      <th>Github PR</th>
      <th>Date</th>
      <th>Remarks</th>
      <th colspan=3>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @statuses.each do |status| %>
      <tr>
        <% if admin? && status.user.present? %>
          <td><%= link_to status.user.name, user_path(status.user)  %></td>
        <% end %>
        <td><%= link_to "Github PR",status.github_pr_link  %></td>
        <td><%= status.date %></td>
        <td><%= status.remarks %></td>
        <td><%= link_to "Show", status%></td>
        <% if admin? %>
          <td><%= link_to 'Add remarks', edit_status_path(status) %></td>
        <% else %>
          <td><%= link_to 'Edit', edit_status_path(status) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to "New Status", new_status_path%>
<br>
<%= link_to "Your profile", user_path(current_user)%>

