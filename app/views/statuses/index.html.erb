<h1>All Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Github PR</th>
      <th>Date</th>
      <th>Remarks</th>
      <th colspan=3>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @statuses.each do |status| %>
      <tr>
        <td><%= link_to "Github PR",status.github_pr_link  %></td>
        <td><%= status.date %></td>
        <td><%= status.remarks %></td>
        <td><%= link_to "Show", status%></td>
        <td><%= link_to "Edit", edit_status_path(status)%></td>
        <td><%= link_to "Delete", status, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to "New Status", new_status_path%>
<br>
<%= link_to "Your profile", user_path(current_user)%>

