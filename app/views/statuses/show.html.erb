<div class="w-full h-24 bg-[#112A46] text-[#F5F5F5] tracking-tighter">
  <%= link_to user_path(current_user), class: "absolute left-[85%] mt-8 text-4xl" do %>
    <%= current_user.name %>
  <% end %>
  <%= link_to user_path(current_user), class: "mt-8 text-4xl" do %>
    <i class="fa-solid fa-circle-user mx-[168vh] mr-12 mt-[2.6%]"></i>
  <% end %>
</div>
<hr>

<div class="bg-[#C1DFFF]  w-full h-screen relative">
    <div class="p-6 bg-[#BBB6B6] item-center justify-center ml-[40%] p-4 mb-10 rounded-lg shadow text-center left-[45%] top-[20%] w-72">
        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900">Status: <%= @status.id %></h5>
        <p class="font-normal text-gray-700">Date: <%= @status.date %></p>
    </div>
    <% unless admin? %>
        <p><%= link_to 'New Task', new_task_path(status_id: @status.id), class: "bg-[#112A46] text-[#F5F5F5] w-32 rounded-lg p-3 absolute left-[45%] top-80 h-12 hover:bg-[#F5F5F5] hover:text-[#112A46] text-center" %></p>
    <% end %>
    <table class="border-spacing-1 absolute bottom-8 w-full overflow-hidden">
            <thead>
                <tr>
                    <th class="border border-slate-600">Start Time</th>
                    <th class="border border-slate-600">End Time</th>
                    <th class="border border-slate-600">Title</th>
                    <th class="border border-slate-600">Description</th>
                    <th class="border border-slate-600">Screenshot of Output</th>
                    <th class="border border-slate-600">Actions</th>
                </tr>
            </thead>
            <tbody class="border border-slate-600">
                <% @status.tasks.each do |task| %>
                    <tr  class="border border-slate-600" >
                        <td class="border border-slate-600"><%= task.start_time %></td>
                        <td class="border border-slate-600"><%= task.end_time %></td>
                        <td class="border border-slate-600"><%= task.title %></td>
                        <td class="border border-slate-600"><%= task.description %></td>
                        <td class="border border-slate-600"><%= image_tag task.screenshot, style: "max-width: 100px; max-height: 100px;" if task.screenshot.attached? %></td>
                        <td class="border border-slate-600"><%= link_to "Edit", edit_task_path(task), class: "hover:text-blue-500 underline md:decoration-solid" %></td>
                    </tr>
                <% end %>
            </tbody>
    </table>
</div>
