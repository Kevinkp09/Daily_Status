<%= form_with(model: @employee,  local: true) do |f| %>
    <p>
        <%= f.label :name %> <br>
        <%= f.text_field :name %>        
    </p>
    <p>
        <%= f.label :email %> <br>
        <%= f.text_area :email %>        
    </p>
       <p>
        <%= f.label :password %> <br>
        <%= f.text_field :password %>
       </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>